<Window x:Class="MegamanXPasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegamanXPasswordGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="513" Width="720">
    <Grid Margin="10" x:Name="entireData">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Armored Armadillo</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="armadilloIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="armadilloHeartTank">Heart-tank</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" x:Name="armadilloEtank">E-tank</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/armadillo.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                    <Image Grid.Column="1" Grid.Row="2" Margin="5" Source="Sprites/e-tank.jpg"></Image>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Launch Octopus</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="octopusIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="octopusHeartTank">Heart-tank</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/octopus.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                </Grid>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Chill Penguin</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="penguinIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="penguinHeartTank">Heart-tank</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" x:Name="pantsArmour">Pants</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/penguin.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                    <Image Grid.Column="1" Grid.Row="2" Margin="5" Source="Sprites/boots.jpg"></Image>
                </Grid>
            </Grid>

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Flame Mammoth</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="mammothIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="mammothHeartTank">Heart-tank</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" x:Name="mammothEtank">E-tank</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" x:Name="chargeArmour">Charge-shot</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/mammoth.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                    <Image Grid.Column="1" Grid.Row="2" Margin="5" Source="Sprites/e-tank.jpg"></Image>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Storm Eagle</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="eagleIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="eagleHeartTank">Heart-tank</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" x:Name="eagleETank">E-tank</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/eagle.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                    <Image Grid.Column="1" Grid.Row="2" Margin="5" Source="Sprites/e-tank.jpg"></Image>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Spark Mandrill</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="mandrillIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="mandrillHeartTank">Heart-tank</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/mandrill.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                </Grid>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Label>Sting Chamelon</Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="chameleonIsDefeated">Defeated</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="chameleonHeartTank">Heart-tank</CheckBox>
                    <CheckBox Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" x:Name="chameleonBodyArmour">Body Armour</CheckBox>

                    <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/chameleon.png"></Image>
                    <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                    <Image Grid.Column="1" Grid.Row="2" Margin="5" Source="Sprites/boots.jpg"></Image>
                </Grid>
            </Grid>

            <Border Grid.Column="3" BorderBrush="Black" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Label>Boomer Kuwanger</Label>
                    </Grid>

                    <Grid x:Name="boomerKuwangerItems" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" x:Name="boomerDefeated">Defeated</CheckBox>
                        <CheckBox Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" x:Name="boomerHeartTank">Heart-tank</CheckBox>


                        <Image Grid.Column="1" Grid.Row="0" Margin="2" Source="Sprites/kuwanger.png"></Image>
                        <Image Grid.Column="1" Grid.Row="1" Margin="5" Source="Sprites/heart-tank.jpg"></Image>
                        <Image Grid.Column="1" Grid.Row="2" Margin="5" Source="Sprites/e-tank.jpg"></Image>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Click="Generate">Generar</Button>
        </Grid>
    </Grid>
</Window>
    